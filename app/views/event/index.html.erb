<h1>Events</h1>

<h2>Add event to Queue</h2>
<%= form_with(url: event_create_path, method: "post") do %>
  <%= label_tag(:event, "Event:") %>
  <%= text_field_tag(:event, "was opened by Carl") %>
  <%= submit_tag("Queue Event") %>
<% end %>

<h2>List of Events</h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Message</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.message %></td>
        <td><%= event.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>